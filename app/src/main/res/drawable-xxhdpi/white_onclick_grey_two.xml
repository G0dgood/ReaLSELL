<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="#808080"/>
            <stroke
                android:color="#000"
                android:width="0.5dp"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#FF564F"/>
            <stroke
                android:color="#000"
                android:width="0.5dp"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
</selector>

